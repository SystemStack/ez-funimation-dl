{
  "extends": "ts-node/node12/tsconfig.json",
  "ts-node": {
    "transpileOnly": false,
    "files": true,
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "./dist/",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts", "webpack.config.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "ts-node",
    "filesystem",
    "prompts",
    "typescript"
  ]
}